# Description:
#   AWS s2n tls

package(default_visibility = ["//visibility:public"])

licenses(["notice"])  # Apache 2.0

cc_library(
    name = "aws_c_io",
    srcs = glob([
        "include/aws/io/**/*.h",
        "source/*.h",
        "source/*.c",
        "source/pkcs11/**/*.h",
        "source/pkcs11/**/*.c",
        "source/s2n/*.h",
        "source/s2n/*.c",
    ]) + select({
        "@platforms//os:windows": glob([
            "source/windows/*.c",
        ]),
        "@platforms//os:linux": glob([
            "source/linux/*.c",
            "source/posix/*.c",
        ]),
        "@platforms//os:osx": glob([
            "source/bsd/*.c",
            "source/darwin/*.c",
            "source/posix/*.c",
        ])
    }),
    defines = ["USE_S2N"],
#    defines = [] + select({
#        "@platforms//os:linux": ["BYO_CRYPTO"],
#        "//conditions:default": ["USE_S2N"],
#    }),

    includes = ["include"],
    deps = [
        "@com_github_aws_c_common//:aws_c_common",
        "@com_github_aws_c_cal//:aws_c_cal",
        #"@com_github_s2n_tls//:s2n_tls",
        "@com_google_boringssl//:crypto,
    ]
)