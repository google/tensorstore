    ":armeabi-v7a": [
        "-D__ARM_NEON__",
        "-DNEON_INTRINSICS",
        "-march=armv7-a",
        "-mfpu=neon",
        "-mfloat-abi=softfp",
        "-fprefetch-loop-arrays",
    ],
    "@platforms//cpu:arm64": [
        "-DNEON_INTRINSICS",
    ],
    "@platforms//cpu:ppc": [
        "-mcpu=power8",
        "-mtune=power8",
    ],
    "@platforms//cpu:x86_64": [],
    "//conditions:default": [],
}) + select({
    "@rules_cc//cc/compiler:msvc-cl": [
        "-wd4996",
    ],
    "//conditions:default": [
        "-w",
        "-O3",
    ],
})

