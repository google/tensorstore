# 16-bit support
cc_library(
    name = "jpeg16",
    srcs = JPEG16_SOURCES,
    hdrs = glob(["src/*.h"]),
    copts = JPEG_COPTS,
    local_defines = [
        "BITS_IN_JSAMPLE=16",
    ],
    strip_include_prefix = "src",
    textual_hdrs = JPEG_TEXTUAL_HDRS,
    deps = [
        ":jpeg_config",
    ],
)

# 12-bit support
