# Additional targets for bazel_to_cmake to generate:
#
# bazel-to-cmake cannot generate appropriate aliases for aspect-generated
# library names/targets, so add them explicitly:

WELL_KNOWN_TYPES = [
    "any",
    "api",
    "duration",
    "empty",
    "field_mask",
    "source_context",
    "struct",
    "timestamp",
    "type",
    "wrappers",
]

_SUFFIXES = [
    "_proto__cpp_library",
    "_proto__upb_library",
    "_proto__upbdefs_library",
    "_proto__minitable_library",
]

# For CMake, bazel_to_cmake needs to expose the internal generated targets.
[
    alias(
        name = "//:" + x + y,
        actual = "//src/google/protobuf:" + x + y,
    )
    for x in WELL_KNOWN_TYPES + ["descriptor"]
    for y in _SUFFIXES
]

[
    alias(
        name = "//src/google/protobuf:" + x + "_proto__cpp_library",
        actual = "//src/google/protobuf:cmake_wkt_cc_proto",
    )
    for x in WELL_KNOWN_TYPES
]

# Aliases for :compiler_plugin_proto
[
    alias(
        name = "compiler_plugin" + y,
        actual = "//src/google/protobuf/compiler:plugin" + y,
    )
    for y in _SUFFIXES
]
